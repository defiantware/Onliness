{
    "manifest_version": 3,
    "name": "Onlineness",
    "version": "1.0.0",
    "description": "Turns website dark if the internet connection is lost.",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["style.css"],
            "js": ["content.js"]
        }
    ]
}
